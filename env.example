# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=zoo-digital-platform
S3_RAW_PREFIX=raw
S3_SILVER_PREFIX=silver
S3_GOLD_PREFIX=gold

# Data Sources Configuration
ZOO_API_BASE_URL=https://api.zoo.example.com
ZOO_API_KEY=your_zoo_api_key
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Ingestion Topics
ANIMAL_DATA_TOPIC=zoo.animals
VISITOR_DATA_TOPIC=zoo.visitors
WEATHER_DATA_TOPIC=zoo.weather
SENSOR_DATA_TOPIC=zoo.sensors
FEEDING_DATA_TOPIC=zoo.feeding

# Batch Processing
BATCH_SIZE=1000
BATCH_TIMEOUT_SECONDS=60

# Monitoring
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO 